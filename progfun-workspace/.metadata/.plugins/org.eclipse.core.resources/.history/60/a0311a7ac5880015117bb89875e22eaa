package week2

object lecture2 {
  def prod(f: Int => Int)(a: Int, b:Int): Int =
  	if (a > b) 1 else f(a) * prod(f)(a + 1, b)//> prod: (f: Int => Int)(a: Int, b: Int)Int
  	
  prod(x => x * x * x) (1, 3)                     //> res0: Int = 216
  
  def fact(n: Int): Int = prod(x => x) (1, n)     //> fact: (n: Int)Int
  
  fact(2)                                         //> res1: Int = 2
  fact(3)                                         //> res2: Int = 6
  fact(4)                                         //> res3: Int = 24
  fact(10)
}